{
  "postAttachCommand": {
    "server": "flask --debug run",
  },

  "portsAttributes": {
    "5000": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },

  "customizations": {
    "codespaces": {
      "openFiles": ["app.py"]
    },
    "vscode": {
      "extensions": [
        "ms-python.python"
      ]
    }
  },
  "onCreateCommand": "pip install -r requirements.txt",
  "postCreateCommand": "",
  "hostRequirements": {"cpus": 4}
}
